---
import background from '../assets/background.svg';
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ZEB8YFKSCR"
    ></script>
    <script>
      import { onCLS, onINP, onLCP } from 'web-vitals';
      // @ts-ignore
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        // @ts-ignore
        dataLayer.push(arguments);
      }
      // @ts-ignore
      gtag('js', new Date());
      // @ts-ignore
      gtag('config', 'G-ZEB8YFKSCR');

      function sendToGoogleAnalytics({ name, delta, value, id }: any) {
        // @ts-ignore
        gtag('event', name, {
          value: delta, // Use `delta` so the value can be summed.
          metric_id: id, // Needed to aggregate events.
          metric_value: value, // Optional.
          metric_delta: delta, // Optional.
        });
      }
      onCLS(sendToGoogleAnalytics);
      onINP(sendToGoogleAnalytics);
      onLCP(sendToGoogleAnalytics);
    </script>
    <script></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/retire/bo.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={Astro.props.description} />
    <title>{Astro.props.title}</title>
  </head>
  <body>
    <div id="background" style={`background-image: url(${background.src});`}>
    </div>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }
</style>
